@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fabric.js Advanced Editor</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* General Styling */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            color: #333;
        }

        /* Main Layout */
        .container {
            display: flex;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        /* Toolbar */
        .toolbar {
            min-width: 300px;
            max-width: 300px;
            width: 150px;
            display: grid;
            gap: 10px;
            padding: 1px;
            background: #ffffff;
            border-right: 2px solid #ddd;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            overflow-x: hidden;
            justify-content: start;
        }

        .toolbox-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            padding: 10px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            border-radius: 5px;
            margin-bottom: 5px;
        }
        /* Shape Boxes */
        .shapebox{
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(40px, 1fr));
            gap: 5px;
            background: #ffffff;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            height: 200px;
            outline-style: auto
        }

        .buttonInARow {
            display: flex;
            justify-content: space-evenly;
        }



        /* Tool Items */
        .tool {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            border: 2px solid #ddd;
            border-radius: 8px;
            cursor: pointer;
            text-align: center;
            background: #ffffff;
            transition: all 0.3s ease;
            font-size: 10px;
            font-weight: 500;
            color: #333;
        }

            .tool:hover {
                background: #007bff;
                color: white;
                border-color: #007bff;
                transform: scale(1.05);
            }

        .tool-icon {
            font-size: 20px;
            margin-bottom: 5px;
        }

        /* Buttons */
        button {
            padding: 5px;
            border: none;
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            cursor: pointer;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.2);
        }

        canvas {
            border: 1px solid black;
        }

        button:hover {
            background: linear-gradient(135deg, #0056b3, #004099);
            transform: scale(1.05);
        }

        /* Special Buttons */
        #pencilBtn.active {
            background: linear-gradient(135deg, #ff7b00, #b35600);
            color: white;
            border: 2px solid #b35600;
            box-shadow: 2px 4px 10px rgba(255, 123, 0, 0.4);
        }

        #pencilBtn:hover {
            background: linear-gradient(135deg, #0056b3, #003c80);
        }


        .row {
            display: flex;
            justify-content: space-evenly;
        }

        /* Editor Panel */
        .big-canvas {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #f0f4f8;
            padding: 20px;
            box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }



        /* Page Buttons */
        #pageButtonsContainer {
            margin-top: 10px;
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
        }

        .page-button {
            padding: 5px 10px;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            cursor: pointer;
            border-radius: 5px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

            .page-button:hover {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

        .canvas-container {
            display: flex;
            justify-content: center; /* Centers horizontally */
            align-items: center; /* Centers vertically */
            width: 100%;
            height: 100vh; /* Full height */
            position: relative;
            background: #f0f4f8;
            overflow: auto;
        }



        .page-button.active-page {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }


        /* Properties Panel */
        .properties-panel {
            align-items: center;
            background: #ffffff;
            padding: 10px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            overflow-y: auto;
            border-left: 2px solid #ddd;
            box-shadow: -4px 0 10px rgba(0, 0, 0, 0.1);
            /* Positioning to stick it to the right */
            position: fixed;
            width: 150px;
            top: 0;
            right: 0;
            height: 40vh; /* Make it take full height */
        }

        .big-canvas {
            display: flex;
        }

        .properties-panel input {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            width: 100px;
        }

        .properties-panel button {
            padding: 10px;
            font-size: 14px;
        }

        #search-input{
            display:block;
        }
    

        .object-selector {
            align-items: center;
            background: #ffffff;
            padding: 10px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: stretch;
            gap: 10px;
            overflow-y: auto;
            border-left: 2px solid #ddd;
            box-shadow: -4px 0 10px rgba(0, 0, 0, 0.1);
            /* Positioning to stick it to the right */
            position: fixed;
            width: 150px;
            bottom: 0;
            right: 0;
            height: 50vh; /* Make it take full height */
        }

            .object-selector h3 {
                margin: 0 0 15px 0;
                font-size: 18px;
                color: #333;
            }

        #objectList {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .object-item {
            padding: 10px;
            background: #f0f0f0;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
            color: #333;
        }

            .object-item:hover {
                background: #007bff;
                color: white;
                border-color: #007bff;
            }
    </style>
</head>
